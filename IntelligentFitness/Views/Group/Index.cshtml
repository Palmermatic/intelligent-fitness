@model IntelligentFitness.Models.ViewModels.GroupViewModel
@using IntelligentFitness.Models
@{ViewBag.Title = "Exercise Groups";}
<script src="~/Scripts/CustomJs.js"></script>
@using (Html.BeginForm()) {
@Html.AntiForgeryToken()

<h2>Exercise Groups</h2>
<div id="groups">
@foreach (var item in Model.ExerciseGroups)
{
    <div class="form-group">
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) -
        @Html.DisplayFor(modelItem => item.Name) -
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </div>
}
</div>
<div>
    @Html.LinkToAddNestedForm(model => model.ExerciseGroups, "Add a Group", ".groups", ".group")
</div>

    
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</div>
}